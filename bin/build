#!/bin/sh
set -e

if command -v docker >/dev/null; then
  docker build -t bern-build:latest --build-arg USER_ID=$(id -u) --build-arg GROUP_ID=$(id -g) .
  docker run -v "$(pwd)/releases:/home/user/app/releases/artifacts" --rm -it bern-build:latest mix release
else
  echo "You must have docker installed to build a release"
  echo "Visit https://www.docker.com/get-started for more information"
  exit 1
fi
