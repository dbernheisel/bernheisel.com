      <div class="flex items-center justify-center h-screen">
        <div class="bg-brand-500 shadow animate-pulse text-white font-bold rounded-lg shadow-lg p-20">
          <%= img_tag Routes.static_path(@conn, "/images/404.jpg") %>
        </div>
      </div>
    </div>
